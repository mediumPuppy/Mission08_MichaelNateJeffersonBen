@{
}
@model TaskData

<h1>Add/Edit Tasks</h1>

<form method="post">
    <input type="hidden" asp-for="TaskID">
    <label asp-for="TaskName">Task:</label>
    <input asp-for="TaskName" />
    <br />
    <label asp-for="DueDate">Due Date:</label>
    <input asp-for="DueDate" type="date" />
    <br />
    <label asp-for="Quadrant">Quadrant:</label>
    <select asp-for="Quadrant">
        <option value="Important-Urgent">Quadrant 1: Important-Urgent</option>
        <option value="Important-Not Urgent">Quadrant 2: Important-Not Urgent</option>
        <option value="Not Important-Urgent">Quadrant 3: Not Important-Urgent</option>
        <option value="Not Important-Not Urgent">Quadrant 4: Not Important-Not Urgent</option>

    </select>
    <br />
    <label asp-for="Category">Category:</label>
    <select asp-for="Category">
        <option value="">Select An Option</option>
        <option value="Home">Home</option>
        <option value="School">School</option>
        <option value="Work">Work</option>
        <option value="Church">Church</option>

    </select>
    <br />
    <label asp-for="Completed">Completed:</label>
    <select asp-for="Completed">
        <option value="1">Yes</option>
        <option value="0">No</option>
    </select>
    <br />
    <br />


    <button type="submit">Submit</button>

    <div asp-validation-summary="All"></div>

</form> 