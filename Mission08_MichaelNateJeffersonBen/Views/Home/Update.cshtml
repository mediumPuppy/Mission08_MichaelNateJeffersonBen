@{
}
@model TaskDatum

<h1>Add/Edit Tasks<h1>

 <form method="post">
    <input type="hidden" asp-for="TaskId">
    <label asp-for="TaskName">Task:</label>
    <input asp-for="TaskName" />
    <br />
    <label asp-for="DueDate">Due Date:</label>
    <input asp-for="DueDate" type="date"/>
    <br />
    <label asp-for="Quadrant">Quadrant:</label>
    <select asp-for="Quadrant">
        <option value="1">Quadrant I: Important/Urgent</option>
        <option value="2">Quadrant II: Important/Not Urgent</option>
        <option value="3">Quadrant III: Not Importnat/Urgent</option>
        <option value="4">Quadrant IV: Not Important/Not Urgent</option>
    </select>
    <br />
    <label asp-for="Category">Category:</label>
    <br />
    <select asp-for="Category">
        <option value="">Select An Option</option>
        <option value="Home">Home</option>
        <option value="School">School</option>
        <option value="Work">Work</option>
        <option value="Church">Church</option>

    </select>
    <br />
    <label asp-for="Completed">Completed:</label>
    <br />
    <select asp-for="Completed">
        <option value="1">Yes</option>
        <option value="0">No</option>
    </select>
    <br />
    <br />

    
    <button type="submit">Submit</button>

    <div asp-validation-summary="All"></div>

</form> 