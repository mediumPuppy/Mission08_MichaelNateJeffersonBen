@{
}
@model TaskData

<div class="container">
    <h1>Add/Edit Tasks</h1>

    <form method="post">
        <input type="hidden" asp-for="TaskId">

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="TaskName" class="form-label">Task:</label>
                <input asp-for="TaskName" class="form-control">
            </div>
            <div class="col-md-6">
                <label asp-for="DueDate" class="form-label">Due Date:</label>
                <input asp-for="DueDate" type="date" class="form-control">
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Quadrant" class="form-label">Quadrant:</label>
                <select asp-for="Quadrant" class="form-select">
                    <option value="Important-Urgent">Quadrant 1: Important-Urgent</option>
                    <option value="Important-Not Urgent">Quadrant 2: Important-Not Urgent</option>
                    <option value="Not Important-Urgent">Quadrant 3: Not Important-Urgent</option>
                    <option value="Not Important-Not Urgent">Quadrant 4: Not Important-Not Urgent</option>
                </select>
            </div>
            <div class="col-md-6">
                <label asp-for="Category" class="form-label">Category:</label>
                <select asp-for="CategoryId">
                    <option value="">Select a Category</option>
                    @foreach (CategoryData m in ViewBag.Categories)//Looping through all the categores and making options in a dropdown
                    {
                        <option value="@m.CategoryId">@m.CategoryName</option>
                    }
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Completed" class="form-label">Completed:</label>
                <select asp-for="Completed" class="form-select">
                    <option value="">Select An Option</option>
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>

        <div asp-validation-summary="All"></div>
    </form>
</div>